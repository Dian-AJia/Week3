/**index.wxss**/
.header{
  width: 750rpx;
  height: 115rpx;
  background-color: #42BD55;
  padding-top: 28rpx;
}
.input{
  width: 56%;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  margin: auto;
  border-radius: 15rpx;
  padding-left: 300rpx;
  font-size: 15px;
}
.title{
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-weight: 600;
}
.hot{
  font-size: 14px;
  color: gray;
}
.more{
  font-size: 13px;
  color: #42BD55;
}
.movie-hot{
  width: 750rpx;
  height: 400rpx;
  display: flex;
  justify-content: space-around;
  text-align: center;
}
.movie-hot image{
  width: 100%;
  height: 250rpx;
  font-weight: 600;
}
.box{
  width: 160rpx;
  height: 250rpx;
}
.name{
  font-size: 14px;
  margin: 10rpx 0rpx;
}
.score{
  font-size: 12px;
  font-family: 'Times New Roman', Times, serif;
  color: grey;
}